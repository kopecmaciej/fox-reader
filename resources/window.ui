<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"></requires>
  <requires lib="libadwaita" version="1.0"></requires>
  <template class="FoxReaderAppWindow" parent="AdwApplicationWindow">
    <property name="default-width">800</property>
    <property name="default-height">800</property>
    <property name="title">Fox Reader</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <!-- Header -->
        <child>
          <object class="AdwHeaderBar">
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">Fox Reader</property>
              </object>
            </property>
            <child type="end">
              <object class="GtkButton" id="theme_button">
                <property name="icon-name">weather-clear-night-symbolic</property>
                <property name="tooltip-text">Toggle dark mode</property>
              </object>
            </child>
          </object>
        </child>
        <!-- Main Content -->
        <child>
          <object class="AdwClamp">
            <property name="maximum-size">800</property>
            <property name="tightening-threshold">600</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="margin-start">16</property>
                <property name="margin-end">16</property>
                <property name="margin-top">16</property>
                <property name="margin-bottom">16</property>
                <property name="spacing">16</property>
                <!-- Text Input Area -->
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="margin-start">16</property>
                    <property name="margin-end">16</property>
                    <property name="margin-top">16</property>
                    <property name="margin-bottom">16</property>
                    <property name="spacing">12</property>

                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title">Text to Speech Reader</property>
                        <child>
                          <object class="GtkTextView" id="text_input">
                            <property name="wrap-mode">word</property>
                            <property name="height-request">120</property>
                            <property name="hexpand">true</property>
                            <style>
                              <class name="view" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>

                    <child>
                      <object class="GtkBox">
                        <property name="spacing">8</property>
                        <property name="halign">end</property>

                        <child>
                          <object class="GtkDropDown" id="voice_selector">
                            <property name="enable-search">true</property>
                            <property name="model">
                              <object class="GtkStringList" />
                            </property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkButton" id="play_button">
                            <property name="label">Play</property>
                            <style>
                              <class name="suggested-action" />
                            </style>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>


                <!-- Search and Filter Controls -->
                <child>
                  <object class="GtkBox">
                    <property name="spacing">12</property>
                    <property name="halign">3</property>
                    <!-- View Switcher -->
                    <child>
                      <object class="AdwViewSwitcher" id="view_switcher">
                        <property name="policy">wide</property>
                        <property name="stack">voice_stack</property>
                      </object>
                    </child>
                    <!-- Search Voice -->
                    <child>
                      <object class="GtkSearchEntry" id="search_entry">
                        <property name="width-request">300</property>
                        <property name="placeholder-text">Search voices...</property>
                      </object>
                    </child>
                    <!-- Filter By language -->
                    <child>
                      <object class="GtkDropDown" id="language_filter">
                        <property name="enable-search">true</property>
                        <property name="model">
                          <object class="GtkStringList"></object>
                        </property>
                      </object>
                    </child>

                  </object>
                </child>


                <!-- Stack for different voice views -->
                <child>
                  <object class="AdwViewStack" id="voice_stack">
                    <!-- All Voices Page -->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">all_voices</property>
                        <property name="title">All Voices</property>
                        <property name="icon-name">view-list-symbolic</property>
                        <property name="child">
                          <object class="AdwPreferencesGroup">
                            <child>
                              <!-- Initial container with the VoiceList -->
                              <object class="GtkBox" id="all_voices_container">
                                <property name="vexpand">true</property>
                                <child>
                                  <object class="VoiceList" id="voice_list">
                                    <property name="vexpand">true</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>

                    <!-- Downloaded Voices Page -->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">downloaded_voices</property>
                        <property name="title">Downloaded</property>
                        <property name="icon-name">folder-download-symbolic</property>
                        <property name="child">
                          <object class="AdwPreferencesGroup">
                            <child>
                              <object class="GtkBox" id="downloaded_container">
                                <property name="vexpand">true</property>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>

                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
