<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TextReader" parent="AdwBin">
    <property name="child">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Text to Speech Reader</property>
            <child>
              <object class="GtkTextView" id="text_input">
                <property name="wrap-mode">word</property>
                <property name="height-request">420</property>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <style>
                  <class name="card"></class>
                  <class name="text-input"></class>
                </style>
              </object>
            </child>
          </object>
        </child>
        <!-- Playback controls -->
        <child>
          <object class="GtkBox">
            <property name="spacing">8</property>
            <property name="halign">fill</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="hexpand">true</property>
            <style>
              <class name="playback-controls"></class>
              <class name="linked"></class>
            </style>
            <child>
              <object class="GtkDropDown" id="voice_selector">
                <property name="enable-search">true</property>
                <property name="width-request">380</property>
                <property name="model">
                  <object class="GtkStringList"></object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="prev_button">
                <property name="icon-name">media-skip-backward-symbolic</property>
                <property name="tooltip-text">Previous</property>
                <style>
                  <class name="circular"></class>
                  <class name="flat"></class>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="play_button">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="tooltip-text">Play</property>
                <property name="sensitive">true</property>
                <style>
                  <class name="circular"></class>
                  <class name="suggested-action"></class>
                  <class name="large"></class>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="stop_button">
                <property name="icon-name">media-playback-stop-symbolic</property>
                <property name="tooltip-text">Stop</property>
                <property name="sensitive">false</property>
                <style>
                  <class name="circular"></class>
                  <class name="flat"></class>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="next_button">
                <property name="icon-name">media-skip-forward-symbolic</property>
                <property name="tooltip-text">Next</property>
                <style>
                  <class name="circular"></class>
                  <class name="flat"></class>
                </style>
              </object>
            </child>
            <!-- Enhanced speed slider -->
            <child>
              <object class="GtkScale" id="speed_scale">
                <property name="hexpand">true</property>
                <property name="draw-value">false</property>
                <property name="adjustment">
                  <object class="GtkAdjustment">
                    <property name="lower">50</property>
                    <property name="upper">200</property>
                    <property name="value">100</property>
                    <property name="step-increment">10</property>
                    <property name="page-increment">50</property>
                  </object>
                </property>
                <style>
                  <class name="speed_scale"></class>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
